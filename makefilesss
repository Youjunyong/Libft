CC      = gcc
C_FLAGS  = -Wall -Wextra -Werror
AR      = ar rc
# AR = ar (Archive maintaining program)
RANLIB  = ranlib

NAME    = libft.a
# HEADER    = libft.h
# SRCS    = ft_strlen.c ft_memset.c ft_bzero.c ft_memcpy.c ft_isalpha.c\
# 			ft_isdigit.c ft_isalnum.c ft_atoi.c ft_strlcat.c\
# 			ft_strchr.c ft_calloc.c ft_isascii.c ft_isprint.c
			
# OBJS    = $(SRCS:.c=.o)
OBJS = $(pastsubst %.c , %.o, $(wildcard *.c))

.PHONY: all, clean, fclean, re

all: $(NAME)

$(NAME):
		@$(CC) $(C_FLAGS) -c $(SRCS)
		@echo "^%$(CC) $(C_FLAGS) -c $(SRCS)^%"
		# @gcc -Wall -Wextra - Werror -c main.c
		@$(AR) $(NAME) $(OBJS)
		# ar rc libft.a *.o
		@$(RANLIB) $(NAME)
		@echo "[INFO] Library [$(NAME)] created!"

clean:
		@rm -f $(OBJS)
		@echo "[INFO] Objects removed!"

fclean: clean
		@rm -f $(NAME)
		@echo "[INFO] Library [$(NAME)] removed!"

re:		fclean all
